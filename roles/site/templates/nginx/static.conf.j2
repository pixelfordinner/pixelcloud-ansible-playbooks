server {
    listen                  {{ app_nginx_proxy_listen_port }} deferred;
    listen                  [::]:{{ app_nginx_proxy_listen_port }} deferred;
    server_name             {{ site_site_fqdn }};
    root                    /opt/www/htdocs;

    # Enable Security
    include                 boilerplate/enable/security.conf;

    # Site extras
    include                 /opt/www/conf.d/*.conf;
}
